{
  "manifest_version": 3,
  "name": "Page Digest",
  "version": "4.0",
  "description": "AI digest for articles, Google Docs, Slides, PDFs, and Wikipedia",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://docs.google.com/*",
    "https://drive.google.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [{
    "resources": ["lib/pdfjs/pdf.worker.min.js"],
    "matches": ["<all_urls>"]
  }],
  "icons": {},
  "action": {
    "default_title": "Digest this page"
  }
}
